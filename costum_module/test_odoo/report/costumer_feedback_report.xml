
<odoo>
    <data>
        <!-- Définition du template du rapport -->
        <template id="report_customer_feedback_pdf">
            <t t-name="test_odoo.report_customer_feedback_pdf">
                <t t-call="web.basic_layout">
                    <style>
                        .feedback-box {
                            width: 80%;
                            height: 200px;
                            border: 1px solid #000; /* Bordure noire de 1px */
                            padding: 10px; /* Marge intérieure de 10px */
                            margin: 0 auto; /* Centrer horizontalement */
                        }
                    </style>
                    <div class="page">
                        <div class="header">
                            <h1>Customer Feedback Report</h1>
                            <div class="company-details">
                                <p>Company Name: test_odoo</p>
                                <p>Address Line 1: Babezzouer</p>
                                <p>Address Line 2: Dely brahim</p>
                                <p>Contact Information: +213 553 12 41 79</p>
                            </div>
                        </div>
                        <div class="content">
                            <h2>Feedback Summary</h2>
                            <div class="feedback-section">
                                <t t-foreach="docs" t-as="feedback">
                                    <div class="feedback">
                                        <p><strong>Nom du client:</strong><t t-esc="feedback.customer_name"/></p>
                                        <p><strong>Date:</strong> <t t-esc="feedback.date"/></p>
                                        <p><strong>Référence de Facture:</strong> <t t-esc="feedback.invoice_reference"/></p>
                                        <p><strong>Produit:</strong> <t t-esc="feedback.product_id.name"/></p>
                                        <p><strong>Moyen de Communication:</strong> <t t-esc="feedback.communication_method"/></p>
                                        <p><strong>Feedback:</strong></p>
                                        <div class="feedback-box">
                                            
                                            <p><t t-esc="feedback.feedback"/></p>
                                        </div>
                                    </div>
                                    <div class="page-break"></div>
                                </t>
                            </div>
                        </div>
                        <div class="footer">
                            <p>Generated by Wassim</p>
                        </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- Définition de l'action du rapport -->
        <record id="action_report_customer_feedback_pdf" model="ir.actions.report">
            <field name="name">Customer Feedback Report</field>
            <field name="model">customer.feedback</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">test_odoo.report_customer_feedback_pdf</field>
            <field name="report_file">test_odoo.report_customer_feedback_pdf</field>
            <field name="print_report_name">"Customer Feedback Report - " + object.customer_name</field>
        </record>

        <!-- Enregistrement du rapport -->
        <report
            id="customer_feedback_report"
            model="customer.feedback"
            string="Customer Feedback Report"
            report_type="qweb-pdf"
            name="test_odoo.report_customer_feedback_pdf"
            file="test_odoo.report_customer_feedback_pdf"
            attachment_use="False"
        />
    </data>
</odoo>
